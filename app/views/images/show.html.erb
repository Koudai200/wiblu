<div class="main posts-show">
  <div class="container">
    <div class="images-show-item">
      <div class="image-left">
        <%= image_tag("/user_images/#{h(@user.image_name)}") %>
      </div>
      <div class="image-right">
        <div class="post-user-name">
          <%= link_to(@user.name, user_path(@user)) %>
        </div>
      </div>
      <div class="image-contents">
        <%= image_tag(@image.ctype.url, size: "400x266", alt: "Image") %>
        <div class="image-body">
          <p>タイトル</p>
          <div><%= h(@image.image_name) %></div>
          <p>概要欄</p>
          <div><%= simple_format(h(@image.body)) %></div>
        </div>
      </div>
      <div class="image-time">
        <%= l @image.created_at, format: :long %>
      </div>
      <% if Like.exists?(user_id: @current_user.id, image_id: @image.id) %>
        <%= link_to("/likes/#{h(@image.id)}/image_destroy", method: :post) do %>
          <span class="fa fa-heart liked-btn"></span>
        <% end %>
      <% else %>
        <%= link_to("/likes/#{h(@image.id)}/image_create", method: :post) do %>
          <span class="fa fa-heart unliked-btn"></span>
        <% end %>
      <% end %>
      <%= Like.where(image_id: @image.id).count %>
      <% if @image.user_id == @current_user.id %>
        <div class="post-menus">
          <%= link_to("編集", edit_image_path(@image)) %>
          <%= link_to("削除", image_path(@image), method: :delete) %>
        </div>
      <% end %>
    </div>
  </div>
</div>
