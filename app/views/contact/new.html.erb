<div class="main contacts-new">
  <div class="container">
    <h1 class="form-heading">お問い合わせ</h1>
    <div class="form">
      <div class="form-body">
        <form action="<%= url_for('/contacts/create') %>" method="post">
          <label for="name">
            <span class="required">必須</span>
            氏名
          </label>
          <input type="text" id="name" name="name"><%= @contact.name %><br>

          <label for="email">
            <span class="required">必須</span>
            メールアドレス
          </label>
          <input type="email" id="email" name="email"><%= @contact.email %><br>

          <label for="subject">
            <span class="required">必須</span>
            件名
          </label>
          <input type="text" id="subject" name="subject"><%= @contact.subject %><br>

          <label for="message">
            <span class="required">必須</span>
            お問い合わせ内容
          </label>
          <textarea id="message" name="message"><%= @contact.message %></textarea><br>

          <input type="submit" value="送信">
        </form>
      </div>
    </div>
  </div>
</div>
